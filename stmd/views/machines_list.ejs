<html>
	<head>
		<link href="css/bootstrap.css" type="text/css" rel="stylesheet">
		<style>
			* {
				font-family: sans-serif;
			}
			
			#navbar {
				width: 100%;
				position:fixed;
				height: 50px;
				background-color: rgb(40,204,154);
				border-color: black;
				box-shadow: 0px 2px 15px rgb(253,243,5);
				z-index: 1;
			}
			
			
			#company {
				margin-top: 14px;
				border-radius: 5px;
			}
			
			.panel {
				color: grey;
				height: 40px;
				background-color: white;
				border-radius: 1px;
				position: relative;
				top: 150px;
				padding-top: 10px;
				padding-bottom: 10px;
				border-size: 2px;
				border-color: rgba(132,123,123,.5);
			}
			
			.panel:hover {
				border-color: rgb(40,204,154);
				box-shadow: 0px 2px 10px grey;
				color: black;
			}
			
			a:hover {
				cursor: pointer;
			}
		</style>
		
		<script type="text/javascript">
			
		</script>
	</head>
	<body>
		<div class='container-fluid'>
		
		<!-- new row, for name of the Home Company -->
				<div class='row' id='navbar'>
					
					<h3 class='col-lg-4 col-xs-12' id='company'><b>STMD</b> <small class='text-danger'>Admin Panel</small></h3>
					
				</div>
				<div>
				<% machine_names.forEach(function(name){ %>
					<form action="/weekly/<%= name %>" method="post" class="text-center">
						<input type="submit" value="<%= name %>" class="col-xs-4 col-xs-offset-2 col-md-2 col-md-offset-1 panel">
					</form>
				<% }) %>
				</div>
				
		</div>
		
	</body>
</html>